    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.IngrentientType.IngredientTypeName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IngrentientType.IngredientTypeName)
